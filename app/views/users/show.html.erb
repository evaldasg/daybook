<article id="user">
  <header>
    <h2><%= @user.name %></h2>
    <h3><%= mail_to(@user.email) %></h3>
    <h3><%= @user.username %></h3>
  </header>
</article>
<ul class="button-group radius">
  <li><%= link_to 'Edit Account', edit_user_path(@user), class: 'button' %></li>
  <li><%= link_to 'Delete Account', @user, method: :delete,
                data: { confirm: 'Are you sure you want to permanently delete your account?' },
                class: 'button' %></li>
</ul>
